{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": [
    "object",
    "null"
  ],
  "title": "GPU Schema",
  "description": "Schema for GPU components",
  "required": [
    "metadata"
  ],
  "properties": {
    "opendb_id": {
      "type": [
        "string",
        "null"
      ],
      "description": "Unique identifier for the document (UUID v4)"
    },
    "chipset_manufacturer": {
      "description": "Manufacturer of the GPU chipset (e.g., NVIDIA, AMD, Intel)",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "NVIDIA",
        "AMD",
        "Intel",
        null
      ]
    },
    "chipset": {
      "description": "The specific GPU chipset (e.g., GeForce RTX 4090, Radeon RX 7900 XTX, ARC B580)",
      "type": [
        "string",
        "null"
      ]
    },
    "core_count": {
      "description": "Number of cores/shaders in the GPU",
      "type": [
        "number",
        "null"
      ]
    },
    "memory": {
      "description": "The amount of video memory in GB",
      "type": [
        "number",
        "null"
      ]
    },
    "memory_type": {
      "description": "The type of video memory (e.g., GDDR6X, GDDR6)",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "GDDR7",
        "GDDR6X",
        "GDDR6",
        "GDDR5X",
        "GDDR5",
        "GDDR4",
        "GDDR3",
        "GDDR2",
        "HBM3",
        "HBM2e",
        "HBM2",
        "HBM",
        "DDR5",
        "DDR4",
        "DDR3",
        "DDR2",
        null
      ]
    },
    "core_base_clock": {
      "description": "The base clock speed of the GPU core in MHz",
      "type": [
        "number",
        "null"
      ]
    },
    "core_boost_clock": {
      "description": "The boost clock speed of the GPU core in MHz",
      "type": [
        "number",
        "null"
      ]
    },
    "effective_memory_clock": {
      "description": "Effective memory clock in MHz",
      "type": [
        "number",
        "null"
      ]
    },
    "memory_bus": {
      "description": "Memory bus width in bits",
      "type": [
        "number",
        "null"
      ]
    },
    "interface": {
      "description": "The interface used by the graphics card (e.g., PCIe 4.0 x16, PCIe 5.0 x16)",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "PCIe 5.0 x16",
        "PCIe 5.0 x8",
        "PCIe 4.0 x16",
        "PCIe 4.0 x8",
        "PCIe 4.0 x4",
        "PCIe 3.0 x16",
        "PCIe 3.0 x8",
        "PCIe 3.0 x4",
        "PCIe 3.0 x1",
        "PCIe 2.0 x16",
        "PCIe 1.1 x16",
        "PCIe x16",
        "PCIe x8",
        "PCIe x4",
        "PCIe x2",
        "PCIe x1",
        null
      ]
    },
    "color": {
      "description": "The color(s) of this product. Each color of the product should be included in the array. Includes shroud and backplate colors",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string",
        "enum": [
          "BLACK",
          "WHITE",
          "RGB",
          "RED",
          "BLUE",
          "GREEN",
          "GREY",
          "YELLOW",
          "ORANGE",
          "PURPLE",
          "PINK",
          "BROWN",
          "GOLD"
        ]
      }
    },
    "frame_sync": {
      "description": "The frame synchronization technology supported (e.g., G-Sync, FreeSync, None)",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "G-Sync",
        "FreeSync",
        "G-Sync Compatible",
        "None",
        null
      ]
    },
    "length": {
      "description": "The length of the graphics card in mm",
      "type": [
        "number",
        "null"
      ]
    },
    "tdp": {
      "description": "The Thermal Design Power of the graphics card in Watts",
      "type": [
        "number",
        "null"
      ]
    },
    "case_expansion_slot_width": {
      "description": "The number of case expansion slot widths the card occupies",
      "type": [
        "number",
        "null"
      ]
    },
    "total_slot_width": {
      "description": "The total slot width the card occupies, accounting for cooler size",
      "type": [
        "number",
        "null"
      ]
    },
    "cooling": {
      "description": "The type of cooling solution (e.g., 3 Fans, 2 Fans, Blower, Water Cooled)",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "4 Fans",
        "3 Fans",
        "2 Fans",
        "1 Fan",
        "Blower",
        "Water Cooled",
        "Hybrid",
        "Passive",
        null
      ]
    },
    "power_connectors": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "pcie_6_pin": {
          "description": "Number of 6-pin PCIe connectors (75W each)",
          "type": [
            "number",
            "null"
          ]
        },
        "pcie_8_pin": {
          "description": "Number of 8-pin PCIe connectors (150W each). A 16-pin PCIe connector is 2x 8-pin PCIe connectors.",
          "type": [
            "number",
            "null"
          ]
        },
        "pcie_12VHPWR": {
          "description": "Number of 12VHPWR PCIe connectors (12VHPWR/PCIe 5.0, 600W)",
          "type": [
            "number",
            "null"
          ]
        },
        "pcie_12V_2x6": {
          "description": "Number of 12V_2x6 PCIe connectors (12V-2x6/ATX 3.1, 600W)",
          "type": [
            "number",
            "null"
          ]
        }
      }
    },
    "video_outputs": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "hdmi_2_2": {
          "description": "Number of HDMI 2.2 ports",
          "type": [
            "number",
            "null"
          ]
        },
        "hdmi_2_1": {
          "description": "Number of HDMI 2.1 ports",
          "type": [
            "number",
            "null"
          ]
        },
        "hdmi_2_0": {
          "description": "Number of HDMI 2.0 ports",
          "type": [
            "number",
            "null"
          ]
        },
        "displayport_2_1": {
          "description": "Number of DisplayPort 2.1 ports",
          "type": [
            "number",
            "null"
          ]
        },
        "displayport_2_1a": {
          "description": "Number of DisplayPort 2.1a ports",
          "type": [
            "number",
            "null"
          ]
        },
        "displayport_1_4a": {
          "description": "Number of DisplayPort 1.4a ports",
          "type": [
            "number",
            "null"
          ]
        },
        "displayport_2_1_b": {
          "description": "Number of DisplayPort 2.1b ports",
          "type": [
            "number",
            "null"
          ]
        },
        "dvi_d": {
          "description": "Number of DVI-D ports",
          "type": [
            "number",
            "null"
          ]
        },
        "vga": {
          "description": "Number of VGA ports",
          "type": [
            "number",
            "null"
          ]
        }
      }
    },
    "general_product_information": {
      "type": [
        "object",
        "null"
      ],
      "description": "General product information and retailer SKUs",
      "properties": {
        "amazon_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Amazon product SKU"
        },
        "newegg_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Newegg product SKU"
        },
        "bestbuy_sku": {
          "type": [
            "number",
            "null"
          ],
          "description": "Best Buy product SKU"
        },
        "walmart_sku": {
          "type": [
            "number",
            "null"
          ],
          "description": "Walmart product SKU"
        },
        "adorama_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Adorama product SKU"
        },
        "ibuypower_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "iBuyPower product SKU"
        },
        "hyte_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "HYTE product SKU"
        },
        "manufacturer_url": {
          "type": [
            "string",
            "null"
          ],
          "description": "Official manufacturer product URL"
        }
      }
    },
    "metadata": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "name": {
          "description": "Full product name",
          "type": [
            "string",
            "null"
          ]
        },
        "manufacturer": {
          "description": "GPU manufacturer",
          "type": [
            "string",
            "null"
          ]
        },
        "part_numbers": {
          "description": "Array of manufacturer's part numbers/SKUs",
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "series": {
          "description": "Product series name",
          "type": [
            "string",
            "null"
          ]
        },
        "variant": {
          "description": "Specific variant in the series",
          "type": [
            "string",
            "null"
          ]
        },
        "releaseYear": {
          "description": "Year of release",
          "type": [
            "number",
            "null"
          ]
        },
        "manufacturer_color": {
          "description": "Manufacturer's official color name for this product variant.",
          "type": [
            "string",
            "null"
          ]
        },
        "last_manually_spec_verified_at": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time",
          "description": "ISO 8601 timestamp of when the part specs were last manually verified by a human"
        }
      },
      "required": [
        "name"
      ]
    }
  }
}
