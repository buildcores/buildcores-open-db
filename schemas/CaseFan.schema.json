{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": [
    "object",
    "null"
  ],
  "title": "Case Fan Schema",
  "description": "Schema for Case Fan components",
  "required": [
    "metadata"
  ],
  "properties": {
    "opendb_id": {
      "type": [
        "string",
        "null"
      ],
      "description": "Unique identifier for the document (UUID v4)"
    },
    "size": {
      "description": "The fan size in mm (e.g., 120)",
      "type": [
        "number",
        "null"
      ]
    },
    "color": {
      "description": "The color(s) of this product. Each color of the product should be included in the array.",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string",
        "enum": [
          "BLACK",
          "WHITE",
          "RGB",
          "RED",
          "BLUE",
          "GREEN",
          "GREY",
          "YELLOW",
          "ORANGE",
          "PURPLE",
          "PINK",
          "BROWN",
          "GOLD"
        ]
      }
    },
    "quantity": {
      "description": "Number of fans included in the package (e.g., 3). Important for multi-packs",
      "type": [
        "number",
        "null"
      ]
    },
    "min_airflow": {
      "description": "The minimum airflow of the fan in CFM. If it is a constant, just fill in min_airflow and ignore max_airflow",
      "type": [
        "number",
        "null"
      ]
    },
    "max_airflow": {
      "description": "The maximum airflow of the fan in CFM. If it is a constant, just fill in min_airflow and ignore max_airflow",
      "type": [
        "number",
        "null"
      ]
    },
    "min_noise_level": {
      "description": "The minimum noise level of the fan in dB. If it is a constant, just fill in min_noise_level and ignore max_noise_level",
      "type": [
        "number",
        "null"
      ]
    },
    "max_noise_level": {
      "description": "The maximum noise level of the fan in dB. If it is a constant, just fill in min_noise_level and ignore max_noise_level",
      "type": [
        "number",
        "null"
      ]
    },
    "pwm": {
      "description": "Whether the fan supports Pulse Width Modulation for speed control",
      "type": [
        "boolean",
        "null"
      ]
    },
    "led": {
      "description": "The type of LED lighting, if any (e.g., 'Addressable RGB', 'RGB', 'None')",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "None",
        "Addressable RGB",
        "RGB",
        "Blue",
        "Red",
        "White",
        "Green",
        "Multicolor",
        "Orange",
        "Purple",
        "Pink",
        "ARGB",
        "Yellow",
        null
      ]
    },
    "connector": {
      "description": "The type of connector(s) the fan uses (e.g., '4-pin PWM + 3-pin 5V Addressable RGB')",
      "type": [
        "string",
        "null"
      ]
    },
    "controller": {
      "description": "If the fan includes a controller, specify the type (e.g., '5V Addressable RGB'). Otherwise, indicate 'None'",
      "type": [
        "string",
        "null"
      ]
    },
    "static_pressure": {
      "description": "The static pressure of the fan in mmHâ‚‚O",
      "type": [
        "number",
        "null"
      ]
    },
    "flow_direction": {
      "description": "The direction of the airflow (e.g., 'Standard', 'Reverse')",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "Standard",
        "Reverse",
        null
      ]
    },
    "isOEM": {
      "description": "Whether this fan is OEM-only (bundled with cases, not sold separately)",
      "type": [
        "boolean",
        "null"
      ]
    },
    "general_product_information": {
      "type": [
        "object",
        "null"
      ],
      "description": "General product information and retailer SKUs",
      "properties": {
        "amazon_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Amazon product SKU"
        },
        "newegg_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Newegg product SKU"
        },
        "bestbuy_sku": {
          "type": [
            "number",
            "null"
          ],
          "description": "Best Buy product SKU"
        },
        "walmart_sku": {
          "type": [
            "number",
            "null"
          ],
          "description": "Walmart product SKU"
        },
        "adorama_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Adorama product SKU"
        },
        "ibuypower_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "iBuyPower product SKU"
        },
        "hyte_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "HYTE product SKU"
        },
        "manufacturer_url": {
          "type": [
            "string",
            "null"
          ],
          "description": "Official manufacturer product URL"
        }
      }
    },
    "metadata": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "name": {
          "description": "Full product name",
          "type": [
            "string",
            "null"
          ]
        },
        "manufacturer": {
          "description": "Case Fan manufacturer",
          "type": [
            "string",
            "null"
          ]
        },
        "part_numbers": {
          "description": "Array of manufacturer's part numbers/SKUs",
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "series": {
          "description": "Product series name",
          "type": [
            "string",
            "null"
          ]
        },
        "variant": {
          "description": "Specific variant in the series",
          "type": [
            "string",
            "null"
          ]
        },
        "releaseYear": {
          "description": "Year of release",
          "type": [
            "number",
            "null"
          ]
        },
        "manufacturer_color": {
          "description": "Manufacturer's official color name for this product variant.",
          "type": [
            "string",
            "null"
          ]
        },
        "last_manually_spec_verified_at": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time",
          "description": "ISO 8601 timestamp of when the part specs were last manually verified by a human"
        }
      },
      "required": [
        "name"
      ]
    }
  }
}
