{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": [
    "object",
    "null"
  ],
  "title": "Keyboard Schema",
  "description": "Schema for Keyboard components",
  "required": [
    "metadata"
  ],
  "properties": {
    "opendb_id": {
      "type": [
        "string",
        "null"
      ],
      "description": "Unique identifier for the document (UUID v4)"
    },
    "switch": {
      "description": "The specific switch model (e.g., Cherry MX Red, Gateron Brown)",
      "type": [
        "string",
        "null"
      ]
    },
    "switch_type": {
      "description": "The behavior of the switches",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "Linear",
        "Tactile",
        "Clicky",
        "Magnetic",
        "Membrane",
        null
      ]
    },
    "size": {
      "description": "The physical layout size of the keyboard",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "Full Size",
        "96%",
        "TKL (80%)",
        "75%",
        "70%",
        "65%",
        "60%",
        "40%",
        "Numpad",
        "Other",
        null
      ]
    },
    "size_other": {
      "description": "Custom size if not in the standard enum",
      "type": [
        "string",
        "null"
      ]
    },
    "hot_swappable": {
      "description": "Whether switches can be replaced without soldering",
      "type": [
        "boolean",
        "null"
      ]
    },
    "backlighting": {
      "description": "The type of lighting on the keyboard",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "RGB",
        "Single Color",
        "None",
        null
      ]
    },
    "features": {
      "description": "Notable keyboard features (e.g., knob, low profile, split, screen, silent)",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string",
        "enum": [
          "Knob",
          "Low Profile",
          "Split",
          "Screen",
          "Silent"
        ]
      }
    },
    "connectivity": {
      "description": "How the keyboard connects to the computer",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string",
        "enum": [
          "Wired",
          "Wired USB-A",
          "Wired USB-C",
          "Wireless 2.4GHz",
          "Bluetooth"
        ]
      }
    },
    "keycap_material": {
      "description": "The material used for the keycaps (e.g., ABS, PBT)",
      "type": [
        "string",
        "null"
      ]
    },
    "frame_material": {
      "description": "The material used for the keyboard frame/case",
      "type": [
        "string",
        "null"
      ]
    },
    "polling_rate": {
      "description": "The frequency at which the keyboard reports input to the computer in Hz",
      "type": [
        "number",
        "null"
      ]
    },
    "battery_capacity": {
      "description": "The capacity of the built-in battery in mAh (for wireless keyboards)",
      "type": [
        "number",
        "null"
      ]
    },
    "general_product_information": {
      "type": [
        "object",
        "null"
      ],
      "description": "General product information and retailer SKUs",
      "properties": {
        "amazon_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Amazon product SKU"
        },
        "newegg_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Newegg product SKU"
        },
        "bestbuy_sku": {
          "type": [
            "number",
            "null"
          ],
          "description": "Best Buy product SKU"
        },
        "walmart_sku": {
          "type": [
            "number",
            "null"
          ],
          "description": "Walmart product SKU"
        },
        "adorama_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Adorama product SKU"
        },
        "ibuypower_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "iBuyPower product SKU"
        },
        "hyte_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "HYTE product SKU"
        },
        "manufacturer_url": {
          "type": [
            "string",
            "null"
          ],
          "description": "Official manufacturer product URL"
        }
      }
    },
    "metadata": {
      "type": [
        "object",
        "null"
      ],
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string",
          "description": "Full product name"
        },
        "manufacturer": {
          "type": [
            "string",
            "null"
          ],
          "description": "Product manufacturer"
        },
        "part_numbers": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          },
          "description": "Array of manufacturer's part numbers/SKUs"
        },
        "series": {
          "type": [
            "string",
            "null"
          ],
          "description": "Product series name"
        },
        "variant": {
          "type": [
            "string",
            "null"
          ],
          "description": "Specific variant in the series"
        },
        "releaseYear": {
          "type": [
            "number",
            "null"
          ],
          "description": "Year of release"
        },
        "last_manually_spec_verified_at": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time",
          "description": "ISO 8601 timestamp of when the part specs were last manually verified by a human"
        }
      }
    }
  }
}
