{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": [
    "object",
    "null"
  ],
  "title": "CPU Cooler Schema",
  "description": "Schema for CPU Cooler components",
  "required": [
    "metadata"
  ],
  "properties": {
    "opendb_id": {
      "type": [
        "string",
        "null"
      ],
      "description": "Unique identifier for the document (UUID v4)"
    },
    "min_fan_rpm": {
      "description": "Min value of the fan's rotational speed in RPM. If constant, fill in min_fan_rpm and ignore max_fan_rpm",
      "type": [
        "number",
        "null"
      ]
    },
    "max_fan_rpm": {
      "description": "Max value of the fan's rotational speed in RPM. If constant, fill in min_fan_rpm and ignore max_fan_rpm",
      "type": [
        "number",
        "null"
      ]
    },
    "min_noise_level": {
      "description": "The min noise level of the cooler in dB. If constant, fill in min_noise_level and ignore max_noise_level",
      "type": [
        "number",
        "null"
      ]
    },
    "max_noise_level": {
      "description": "The max noise level of the cooler in dB. If constant, fill in min_noise_level and ignore max_noise_level",
      "type": [
        "number",
        "null"
      ]
    },
    "color": {
      "description": "The color(s) of this product. Each color of the product should be included in the array. Includes heatsink or radiator assembly colors",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string",
        "enum": [
          "BLACK",
          "WHITE",
          "RGB",
          "RED",
          "BLUE",
          "GREEN",
          "GREY",
          "YELLOW",
          "ORANGE",
          "PURPLE",
          "PINK",
          "BROWN",
          "GOLD"
        ]
      }
    },
    "height": {
      "description": "The height of the CPU cooler in mm",
      "type": [
        "number",
        "null"
      ]
    },
    "cpu_sockets": {
      "description": "An array of CPU socket types supported by the cooler (e.g., AM4, AM5, LGA 1700, LGA 1200)",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string",
        "enum": [
          "AM5",
          "AM4",
          "AM3+",
          "AM3",
          "AM2+",
          "AM2",
          "AM1",
          "FM2+",
          "FM2",
          "FM1",
          "sTR5",
          "sTRX4",
          "sTR4",
          "TR4",
          "LGA 1851",
          "LGA 1700",
          "LGA 1200",
          "LGA 1151",
          "LGA 1151v2",
          "LGA 1150",
          "LGA 1155",
          "LGA 1156",
          "LGA 2066",
          "LGA 2011-3",
          "LGA 2011-3 Narrow",
          "LGA 2011",
          "LGA 1366",
          "LGA 1356",
          "LGA 775",
          "LGA 4677",
          "LGA 4189",
          "LGA 3647",
          "LGA 1121",
          "G34",
          "SP5",
          "SP3",
          "2 x LGA 2011",
          "2 x LGA 2011-3",
          "2 x LGA 2011-3 Narrow",
          "2 x LGA 1366",
          "2 x G34",
          "Integrated Atom",
          "Integrated Xeon D",
          "Integrated Pentium",
          "Integrated AMD",
          "LGA 115"
        ]
      }
    },
    "water_cooled": {
      "description": "Indicates if the cooler is water-cooled",
      "type": [
        "boolean",
        "null"
      ]
    },
    "radiator_size": {
      "description": "Radiator size in mm (e.g. 360, 280, 240).",
      "type": [
        "number",
        "null"
      ]
    },
    "fanless": {
      "description": "Whether the cooler can operate fanless",
      "type": [
        "boolean",
        "null"
      ]
    },
    "fan_size": {
      "description": "Size of the included fan(s) in mm (e.g. 140, 120)",
      "type": [
        "number",
        "null"
      ]
    },
    "fan_quantity": {
      "description": "Number of included fans",
      "type": [
        "number",
        "null"
      ]
    },
    "general_product_information": {
      "type": [
        "object",
        "null"
      ],
      "description": "General product information and retailer SKUs",
      "properties": {
        "amazon_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Amazon product SKU"
        },
        "newegg_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Newegg product SKU"
        },
        "bestbuy_sku": {
          "type": [
            "number",
            "null"
          ],
          "description": "Best Buy product SKU"
        },
        "walmart_sku": {
          "type": [
            "number",
            "null"
          ],
          "description": "Walmart product SKU"
        },
        "adorama_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Adorama product SKU"
        },
        "ibuypower_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "iBuyPower product SKU"
        },
        "hyte_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "HYTE product SKU"
        },
        "manufacturer_url": {
          "type": [
            "string",
            "null"
          ],
          "description": "Official manufacturer product URL"
        }
      }
    },
    "metadata": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "name": {
          "description": "Full product name",
          "type": [
            "string",
            "null"
          ]
        },
        "manufacturer": {
          "description": "CPU Cooler manufacturer",
          "type": [
            "string",
            "null"
          ]
        },
        "part_numbers": {
          "description": "Array of manufacturer's part numbers/SKUs",
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "series": {
          "description": "Product series name",
          "type": [
            "string",
            "null"
          ]
        },
        "variant": {
          "description": "Specific variant in the series",
          "type": [
            "string",
            "null"
          ]
        },
        "releaseYear": {
          "description": "Year of release",
          "type": [
            "number",
            "null"
          ]
        },
        "manufacturer_color": {
          "description": "Manufacturer's official color name for this product variant.",
          "type": [
            "string",
            "null"
          ]
        },
        "last_manually_spec_verified_at": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time",
          "description": "ISO 8601 timestamp of when the part specs were last manually verified by a human"
        }
      },
      "required": [
        "name"
      ]
    }
  }
}
