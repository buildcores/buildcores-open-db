{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": [
    "object",
    "null"
  ],
  "title": "CPU Schema",
  "description": "Schema for CPU components",
  "required": [
    "metadata"
  ],
  "properties": {
    "opendb_id": {
      "type": [
        "string",
        "null"
      ],
      "description": "Unique identifier for the document (UUID v4)"
    },
    "series": {
      "description": "The product family the CPU belongs to (e.g., Ryzen 7, Core i9, Intel Core Ultra 5)",
      "type": [
        "string",
        "null"
      ]
    },
    "microarchitecture": {
      "description": "The underlying design and organization of the processor's core logic (e.g., Raptor Lake Refresh, Zen 4)",
      "type": [
        "string",
        "null"
      ]
    },
    "coreFamily": {
      "description": "The specific core family (e.g., Raptor Cove, Granite Ridge)",
      "type": [
        "string",
        "null"
      ]
    },
    "socket": {
      "description": "The physical connector on the motherboard that the CPU plugs into (e.g., LGA 1851, AM5, LGA 1700)",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "AM5",
        "AM4",
        "AM3+",
        "AM3",
        "AM2+",
        "AM2",
        "AM1",
        "FM2+",
        "FM2",
        "FM1",
        "sTR5",
        "sTRX4",
        "sTR4",
        "TR4",
        "LGA 1851",
        "LGA 1700",
        "LGA 1200",
        "LGA 1151",
        "LGA 1151v2",
        "LGA 1150",
        "LGA 1155",
        "LGA 1156",
        "LGA 2066",
        "LGA 2011-3",
        "LGA 2011-3 Narrow",
        "LGA 2011",
        "LGA 1366",
        "LGA 1356",
        "LGA 775",
        "LGA 4677",
        "LGA 4189",
        "LGA 3647",
        "LGA 1121",
        "G34",
        "SP5",
        "SP3",
        "2 x LGA 2011",
        "2 x LGA 2011-3",
        "2 x LGA 2011-3 Narrow",
        "2 x LGA 1366",
        "2 x G34",
        "Integrated Atom",
        "Integrated Xeon D",
        "Integrated Pentium",
        "Integrated AMD",
        null
      ]
    },
    "cores": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "total": {
          "description": "The number of independent processing units (physical cores) within the CPU",
          "type": [
            "number",
            "null"
          ]
        },
        "performance": {
          "description": "The number of performance cores (hybrid CPUs only)",
          "type": [
            "number",
            "null"
          ]
        },
        "efficiency": {
          "description": "The number of efficiency cores (hybrid CPUs only)",
          "type": [
            "number",
            "null"
          ]
        },
        "threads": {
          "description": "The number of logical threads the CPU can handle",
          "type": [
            "number",
            "null"
          ]
        }
      }
    },
    "clocks": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "performance": {
          "type": [
            "object",
            "null"
          ],
          "properties": {
            "base": {
              "description": "The base clock speed of the performance cores in GHz",
              "type": [
                "number",
                "null"
              ]
            },
            "boost": {
              "description": "The maximum boost clock speed of the performance cores in GHz",
              "type": [
                "number",
                "null"
              ]
            }
          }
        },
        "efficiency": {
          "type": [
            "object",
            "null"
          ],
          "properties": {
            "base": {
              "description": "The base clock speed of the efficiency cores in GHz (if applicable)",
              "type": [
                "number",
                "null"
              ]
            },
            "boost": {
              "description": "The maximum boost clock speed of the efficiency cores in GHz (if applicable)",
              "type": [
                "number",
                "null"
              ]
            }
          }
        }
      }
    },
    "cache": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "l1": {
          "description": "Breakdown of L1 cache configuration",
          "type": [
            "string",
            "null"
          ]
        },
        "l2": {
          "description": "The total amount of L2 cache in MB",
          "type": [
            "number",
            "null"
          ]
        },
        "l3": {
          "description": "The total amount of L3 cache in MB",
          "type": [
            "number",
            "null"
          ]
        }
      }
    },
    "specifications": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "tdp": {
          "description": "Thermal Design Power: the maximum heat the CPU generates that the cooling system must dissipate, in Watts",
          "type": [
            "number",
            "null"
          ]
        },
        "ppt": {
          "description": "The Package Power Tracking limit of the CPU in Watts (maximum sustained power consumption)",
          "type": [
            "number",
            "null"
          ]
        },
        "integratedGraphics": {
          "type": [
            "object",
            "null"
          ],
          "properties": {
            "model": {
              "description": "The built-in graphics processor included on the CPU die (e.g., Intel UHD 770, AMD Radeon Graphics)",
              "type": [
                "string",
                "null"
              ]
            },
            "baseClock": {
              "description": "Base clock of integrated graphics",
              "type": [
                "number",
                "null"
              ]
            },
            "boostClock": {
              "description": "Boost clock of integrated graphics",
              "type": [
                "number",
                "null"
              ]
            },
            "shaderCount": {
              "description": "Number of shaders in the integrated graphics",
              "type": [
                "number",
                "null"
              ]
            }
          },
          "required": [
            "model"
          ]
        },
        "eccSupport": {
          "description": "Whether the CPU supports Error-Correcting Code memory",
          "type": [
            "boolean",
            "null"
          ]
        },
        "includesCooler": {
          "description": "Whether a cooling solution is bundled with the processor in the box",
          "type": [
            "boolean",
            "null"
          ]
        },
        "packaging": {
          "description": "The type of packaging the CPU comes in (e.g., Boxed, OEM/Tray)",
          "type": [
            "string",
            "null"
          ],
          "enum": [
            "Boxed",
            "OEM/Tray",
            null
          ]
        },
        "lithography": {
          "description": "The manufacturing process technology used. Can be multiple process technologies if chiplet design",
          "type": [
            "string",
            "null"
          ]
        },
        "simultaneousMultithreading": {
          "description": "Whether the CPU supports simultaneous multithreading (SMT), also known as hyperthreading",
          "type": [
            "boolean",
            "null"
          ]
        },
        "memory": {
          "type": [
            "object",
            "null"
          ],
          "properties": {
            "maxSupport": {
              "description": "Max supported memory in GB",
              "type": [
                "number",
                "null"
              ]
            },
            "types": {
              "description": "The type of RAM supported by the CPU's memory controller (e.g., DDR4, DDR5)",
              "type": [
                "array",
                "null"
              ],
              "items": {
                "type": "string",
                "enum": [
                  "DDR5",
                  "DDR4",
                  "DDR3",
                  "DDR2",
                  "DDR1"
                ]
              }
            },
            "channels": {
              "description": "Max supported memory channels",
              "type": [
                "number",
                "null"
              ]
            }
          },
          "required": [
            "types"
          ]
        }
      }
    },
    "general_product_information": {
      "type": [
        "object",
        "null"
      ],
      "description": "General product information and retailer SKUs",
      "properties": {
        "amazon_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Amazon product SKU"
        },
        "newegg_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Newegg product SKU"
        },
        "bestbuy_sku": {
          "type": [
            "number",
            "null"
          ],
          "description": "Best Buy product SKU"
        },
        "walmart_sku": {
          "type": [
            "number",
            "null"
          ],
          "description": "Walmart product SKU"
        },
        "adorama_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Adorama product SKU"
        },
        "ibuypower_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "iBuyPower product SKU"
        },
        "hyte_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "HYTE product SKU"
        },
        "manufacturer_url": {
          "type": [
            "string",
            "null"
          ],
          "description": "Official manufacturer product URL"
        }
      }
    },
    "metadata": {
      "type": [
        "object",
        "null"
      ],
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string",
          "description": "Full product name"
        },
        "manufacturer": {
          "type": [
            "string",
            "null"
          ],
          "description": "Product manufacturer"
        },
        "part_numbers": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          },
          "description": "Array of manufacturer's part numbers/SKUs"
        },
        "series": {
          "type": [
            "string",
            "null"
          ],
          "description": "Product series name"
        },
        "variant": {
          "type": [
            "string",
            "null"
          ],
          "description": "Specific variant in the series"
        },
        "releaseYear": {
          "type": [
            "number",
            "null"
          ],
          "description": "Year of release"
        },
        "last_manually_spec_verified_at": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time",
          "description": "ISO 8601 timestamp of when the part specs were last manually verified by a human"
        }
      }
    }
  }
}
