{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": [
    "object",
    "null"
  ],
  "title": "Microphone Schema",
  "description": "Schema for Microphone components",
  "required": [
    "metadata"
  ],
  "properties": {
    "opendb_id": {
      "type": [
        "string",
        "null"
      ],
      "description": "Unique identifier for the document (UUID v4)"
    },
    "connectivity_type": {
      "description": "Microphone connectivity options (USB-A, USB-C, XLR, 3.5mm, Bluetooth, 2.4GHz, Lightning)",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string",
        "enum": [
          "USB-A",
          "USB-C",
          "XLR",
          "3.5mm Jack",
          "Bluetooth",
          "Wireless 2.4GHz",
          "Lightning"
        ]
      }
    },
    "polar_pattern": {
      "description": "Supported polar patterns (cardioid, omnidirectional, bidirectional, multi-pattern)",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string",
        "enum": [
          "Cardioid",
          "Omnidirectional",
          "Bidirectional",
          "Multi-Pattern"
        ]
      }
    },
    "features": {
      "description": "Features of the microphone (mute button, gain control, rgb lighting)",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string",
        "enum": [
          "Mute Button",
          "Gain Control",
          "RGB Lighting"
        ]
      }
    },
    "general_product_information": {
      "type": [
        "object",
        "null"
      ],
      "description": "General product information and retailer SKUs",
      "properties": {
        "amazon_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Amazon product SKU"
        },
        "newegg_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Newegg product SKU"
        },
        "bestbuy_sku": {
          "type": [
            "number",
            "null"
          ],
          "description": "Best Buy product SKU"
        },
        "walmart_sku": {
          "type": [
            "number",
            "null"
          ],
          "description": "Walmart product SKU"
        },
        "adorama_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Adorama product SKU"
        },
        "ibuypower_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "iBuyPower product SKU"
        },
        "hyte_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "HYTE product SKU"
        },
        "manufacturer_url": {
          "type": [
            "string",
            "null"
          ],
          "description": "Official manufacturer product URL"
        }
      }
    },
    "metadata": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "name": {
          "description": "Full product name",
          "type": [
            "string",
            "null"
          ]
        },
        "manufacturer": {
          "description": "Microphone manufacturer",
          "type": [
            "string",
            "null"
          ]
        },
        "part_numbers": {
          "description": "Array of manufacturer's part numbers/SKUs",
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "series": {
          "description": "Product series name",
          "type": [
            "string",
            "null"
          ]
        },
        "variant": {
          "description": "Specific variant in the series",
          "type": [
            "string",
            "null"
          ]
        },
        "releaseYear": {
          "description": "Year of release",
          "type": [
            "number",
            "null"
          ]
        },
        "last_manually_spec_verified_at": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time",
          "description": "ISO 8601 timestamp of when the part specs were last manually verified by a human"
        }
      },
      "required": [
        "name"
      ]
    }
  }
}
