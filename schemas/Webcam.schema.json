{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": [
    "object",
    "null"
  ],
  "title": "Webcam Schema",
  "description": "Schema for Webcam components",
  "required": [
    "metadata"
  ],
  "properties": {
    "opendb_id": {
      "type": [
        "string",
        "null"
      ],
      "description": "Unique identifier for the document (UUID v4)"
    },
    "resolution": {
      "description": "Common webcam resolution preset (e.g., 720p, 1080p, 2k, 4k)",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "720p",
        "1080p",
        "1440p",
        "2k",
        "4k",
        null
      ]
    },
    "resolution_other": {
      "description": "Custom resolution value if not in preset list",
      "type": [
        "string",
        "null"
      ]
    },
    "frame_rate": {
      "description": "Common webcam frame rate preset",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "24fps",
        "30fps",
        "60fps",
        "90fps",
        "120fps",
        null
      ]
    },
    "frame_rate_other": {
      "description": "Custom frame rate if not in preset list",
      "type": [
        "string",
        "null"
      ]
    },
    "connectivity_type": {
      "description": "Webcam connectivity interface types",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string",
        "enum": [
          "Wired",
          "Wired USB-A",
          "Wired USB-C",
          "Wireless 2.4GHz",
          "Bluetooth"
        ]
      }
    },
    "general_product_information": {
      "type": [
        "object",
        "null"
      ],
      "description": "General product information and retailer SKUs",
      "properties": {
        "amazon_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Amazon product SKU"
        },
        "newegg_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Newegg product SKU"
        },
        "bestbuy_sku": {
          "type": [
            "number",
            "null"
          ],
          "description": "Best Buy product SKU"
        },
        "walmart_sku": {
          "type": [
            "number",
            "null"
          ],
          "description": "Walmart product SKU"
        },
        "adorama_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Adorama product SKU"
        },
        "ibuypower_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "iBuyPower product SKU"
        },
        "hyte_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "HYTE product SKU"
        },
        "manufacturer_url": {
          "type": [
            "string",
            "null"
          ],
          "description": "Official manufacturer product URL"
        }
      }
    },
    "metadata": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "name": {
          "description": "Full product name",
          "type": [
            "string",
            "null"
          ]
        },
        "manufacturer": {
          "description": "Webcam manufacturer",
          "type": [
            "string",
            "null"
          ]
        },
        "part_numbers": {
          "description": "Array of manufacturer's part numbers/SKUs",
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "series": {
          "description": "Product series name",
          "type": [
            "string",
            "null"
          ]
        },
        "variant": {
          "description": "Specific variant in the series",
          "type": [
            "string",
            "null"
          ]
        },
        "releaseYear": {
          "description": "Year of release",
          "type": [
            "number",
            "null"
          ]
        },
        "last_manually_spec_verified_at": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time",
          "description": "ISO 8601 timestamp of when the part specs were last manually verified by a human"
        }
      },
      "required": [
        "name"
      ]
    }
  }
}
