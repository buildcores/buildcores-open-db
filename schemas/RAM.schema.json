{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": [
    "object",
    "null"
  ],
  "title": "RAM Schema",
  "description": "Schema for RAM components",
  "required": [
    "metadata"
  ],
  "properties": {
    "opendb_id": {
      "type": [
        "string",
        "null"
      ],
      "description": "Unique identifier for the document (UUID v4)"
    },
    "speed": {
      "description": "The speed of the RAM in MHz (e.g., 6000, 3200). Looks for hints of this in the product name.",
      "type": [
        "number",
        "null"
      ]
    },
    "ram_type": {
      "description": "DDR generation (e.g., DDR4, DDR5)",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "DDR5",
        "DDR4",
        "DDR3",
        "DDR2",
        "DDR1",
        null
      ]
    },
    "profile_support": {
      "description": "Overclocking profile support tags (xmp_only, expo_only)",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string",
        "enum": [
          "XMP",
          "EXPO"
        ]
      }
    },
    "form_factor": {
      "description": "The physical form factor of the RAM module (e.g., 288-pin DIMM, 260-pin SO-DIMM)",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "288-pin DIMM",
        "262-pin SO-DIMM",
        "260-pin SO-DIMM",
        "240-pin DIMM",
        "204-pin SO-DIMM",
        "200-pin SO-DIMM",
        "184-pin DIMM",
        "UDIMM",
        "DIMM",
        null
      ]
    },
    "modules": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "quantity": {
          "description": "Number of modules in the kit. Looks for hints of this in the product name.",
          "type": [
            "number",
            "null"
          ]
        },
        "capacity_gb": {
          "description": "Capacity per module in GB. Looks for hints of this in the product name.",
          "type": [
            "number",
            "null"
          ]
        }
      }
    },
    "capacity": {
      "description": "Total capacity of the RAM kit in GB. Looks for hints of this in the product name.",
      "type": [
        "number",
        "null"
      ]
    },
    "color": {
      "description": "The color(s) of this product. Each color of the product should be included in the array. Includes PCB and heat spreader colors. Looks for hints of this in the product name.",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string",
        "enum": [
          "BLACK",
          "WHITE",
          "RGB",
          "RED",
          "BLUE",
          "GREEN",
          "GREY",
          "YELLOW",
          "ORANGE",
          "PURPLE",
          "PINK",
          "BROWN",
          "GOLD"
        ]
      }
    },
    "cas_latency": {
      "description": "The CAS latency of the RAM. Looks for hints of this in the product name.",
      "type": [
        "number",
        "null"
      ]
    },
    "timings": {
      "description": "The complete timing specification of the RAM (e.g., 30-36-36-76). Looks for hints of this in the product name.",
      "type": [
        "string",
        "null"
      ]
    },
    "voltage": {
      "description": "The operating voltage of the RAM",
      "type": [
        "number",
        "null"
      ]
    },
    "ecc": {
      "description": "Whether the RAM supports Error-Correcting Code (e.g., Non-ECC, ECC)",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "ECC",
        "Non-ECC",
        null
      ]
    },
    "registered": {
      "description": "Whether the RAM is registered or unbuffered (e.g., Unbuffered, Registered, Load Reduced)",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "Unbuffered",
        "Registered",
        "Load Reduced",
        null
      ]
    },
    "heat_spreader": {
      "description": "Whether the RAM modules have a heat spreader",
      "type": [
        "boolean",
        "null"
      ]
    },
    "rgb": {
      "description": "Whether the RAM has RGB lighting",
      "type": [
        "boolean",
        "null"
      ]
    },
    "height": {
      "description": "The height of the RAM module in mm",
      "type": [
        "number",
        "null"
      ]
    },
    "general_product_information": {
      "type": [
        "object",
        "null"
      ],
      "description": "General product information and retailer SKUs",
      "properties": {
        "amazon_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Amazon product SKU"
        },
        "newegg_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Newegg product SKU"
        },
        "bestbuy_sku": {
          "type": [
            "number",
            "null"
          ],
          "description": "Best Buy product SKU"
        },
        "walmart_sku": {
          "type": [
            "number",
            "null"
          ],
          "description": "Walmart product SKU"
        },
        "adorama_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Adorama product SKU"
        },
        "ibuypower_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "iBuyPower product SKU"
        },
        "hyte_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "HYTE product SKU"
        },
        "manufacturer_url": {
          "type": [
            "string",
            "null"
          ],
          "description": "Official manufacturer product URL"
        }
      }
    },
    "metadata": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "name": {
          "description": "Full product name",
          "type": [
            "string",
            "null"
          ]
        },
        "manufacturer": {
          "description": "RAM manufacturer",
          "type": [
            "string",
            "null"
          ]
        },
        "part_numbers": {
          "description": "Array of manufacturer's part numbers/SKUs",
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "series": {
          "description": "Product series name",
          "type": [
            "string",
            "null"
          ]
        },
        "variant": {
          "description": "Specific variant in the series",
          "type": [
            "string",
            "null"
          ]
        },
        "releaseYear": {
          "description": "Year of release",
          "type": [
            "number",
            "null"
          ]
        },
        "last_manually_spec_verified_at": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time",
          "description": "ISO 8601 timestamp of when the part specs were last manually verified by a human"
        }
      },
      "required": [
        "name"
      ]
    }
  }
}
