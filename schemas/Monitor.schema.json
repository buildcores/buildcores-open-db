{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": [
    "object",
    "null"
  ],
  "title": "Monitor Schema",
  "description": "Schema for Monitor components",
  "required": [
    "metadata"
  ],
  "properties": {
    "opendb_id": {
      "type": [
        "string",
        "null"
      ],
      "description": "Unique identifier for the document (UUID v4)"
    },
    "screen_size": {
      "description": "Screen size in inches",
      "type": [
        "number",
        "null"
      ]
    },
    "resolution": {
      "description": "Resolution of the monitor",
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "horizontalRes": {
          "description": "Horizontal resolution in pixels",
          "type": [
            "number",
            "null"
          ]
        },
        "verticalRes": {
          "description": "Vertical resolution in pixels",
          "type": [
            "number",
            "null"
          ]
        }
      }
    },
    "refresh_rate": {
      "description": "Maximum refresh rate in Hz",
      "type": [
        "number",
        "null"
      ]
    },
    "panel_type": {
      "description": "Type of panel (IPS, VA, TN, OLED, etc.)",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "IPS",
        "VA",
        "TN",
        "OLED",
        "QD-OLED",
        "QD-VA",
        "AHVA",
        "PLS",
        "PVA",
        "WOLED",
        "Mini LED",
        "Mini LED IPS",
        "Mini LED VA",
        "Nano IPS",
        null
      ]
    },
    "response_time": {
      "description": "Gray-to-gray response time in milliseconds",
      "type": [
        "number",
        "null"
      ]
    },
    "color": {
      "description": "The color(s) of this product. Each color of the product should be included in the array.",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string",
        "enum": [
          "BLACK",
          "WHITE",
          "RGB",
          "RED",
          "BLUE",
          "GREEN",
          "GREY",
          "YELLOW",
          "ORANGE",
          "PURPLE",
          "PINK",
          "BROWN",
          "GOLD"
        ]
      }
    },
    "viewing_angle": {
      "description": "Viewing angles (e.g., '178°/178°')",
      "type": [
        "string",
        "null"
      ]
    },
    "aspect_ratio": {
      "description": "Aspect ratio (e.g., '16:9', '21:9')",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "16:9",
        "21:9",
        "16:10",
        "5:4",
        "32:9",
        "12:5",
        "4:3",
        "64:27",
        "3:2",
        "256:135",
        "16:5",
        "8:9",
        "1:1",
        "11:6",
        "683:240",
        null
      ]
    },
    "connectors": {
      "description": "Available ports and connections",
      "type": [
        "string",
        "null"
      ]
    },
    "max_brightness": {
      "description": "Maximum brightness in nits",
      "type": [
        "string",
        "null"
      ]
    },
    "hdr": {
      "description": "HDR support and certification",
      "type": [
        "string",
        "null"
      ]
    },
    "adaptive_sync": {
      "description": "Adaptive sync technology (G-Sync, FreeSync, etc.)",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "None",
        "FreeSync",
        "FreeSync Premium",
        "FreeSync Premium Pro",
        "G-Sync",
        "G-Sync Compatible",
        "G-Sync Ultimate",
        "VESA Adaptive-Sync",
        null
      ]
    },
    "general_product_information": {
      "type": [
        "object",
        "null"
      ],
      "description": "General product information and retailer SKUs",
      "properties": {
        "amazon_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Amazon product SKU"
        },
        "newegg_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Newegg product SKU"
        },
        "bestbuy_sku": {
          "type": [
            "number",
            "null"
          ],
          "description": "Best Buy product SKU"
        },
        "walmart_sku": {
          "type": [
            "number",
            "null"
          ],
          "description": "Walmart product SKU"
        },
        "adorama_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Adorama product SKU"
        },
        "ibuypower_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "iBuyPower product SKU"
        },
        "hyte_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "HYTE product SKU"
        },
        "manufacturer_url": {
          "type": [
            "string",
            "null"
          ],
          "description": "Official manufacturer product URL"
        }
      }
    },
    "metadata": {
      "type": [
        "object",
        "null"
      ],
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string",
          "description": "Full product name"
        },
        "manufacturer": {
          "type": [
            "string",
            "null"
          ],
          "description": "Product manufacturer"
        },
        "part_numbers": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          },
          "description": "Array of manufacturer's part numbers/SKUs"
        },
        "series": {
          "type": [
            "string",
            "null"
          ],
          "description": "Product series name"
        },
        "variant": {
          "type": [
            "string",
            "null"
          ],
          "description": "Specific variant in the series"
        },
        "releaseYear": {
          "type": [
            "number",
            "null"
          ],
          "description": "Year of release"
        },
        "last_manually_spec_verified_at": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time",
          "description": "ISO 8601 timestamp of when the part specs were last manually verified by a human"
        }
      }
    }
  }
}
