{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": [
    "object",
    "null"
  ],
  "title": "Power Supply Schema",
  "description": "Schema for Power Supply components",
  "required": [
    "metadata"
  ],
  "properties": {
    "opendb_id": {
      "type": [
        "string",
        "null"
      ],
      "description": "Unique identifier for the document (UUID v4)"
    },
    "wattage": {
      "description": "The total power output of the PSU in watts (e.g., 1000)",
      "type": [
        "number",
        "null"
      ]
    },
    "form_factor": {
      "description": "The physical size and shape of the PSU (e.g., ATX)",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "ATX",
        "SFX",
        "SFX-L",
        "TFX",
        "Flex ATX",
        "Mini-ITX",
        "ATX/EPS",
        null
      ]
    },
    "efficiency_rating": {
      "description": "The 80 PLUS efficiency certification level (e.g., 80 PLUS Gold)",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "80+ Titanium",
        "80+ Platinum",
        "80+ Gold",
        "80+ Silver",
        "80+ Bronze",
        "80+ Standard",
        "80+ White",
        "80+",
        null
      ]
    },
    "cybernetics_efficiency_rating": {
      "description": "The Cybernetics efficiency rating of the PSU (e.g., Cybenetics Titanium)",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "Cybenetics Diamond",
        "Cybenetics Titanium",
        "Cybenetics Platinum",
        "Cybenetics Gold",
        "Cybenetics Silver",
        "Cybenetics Bronze",
        "Cybenetics Standard",
        null
      ]
    },
    "cybernetics_noise_rating": {
      "description": "The Cybernetics noise rating of the PSU (e.g., Cybernetics A++)",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "Cybenetics A++",
        "Cybenetics A+",
        "Cybenetics A",
        "Cybenetics A-",
        "Cybenetics Standard++",
        "Cybenetics Standard+",
        "Cybenetics Standard",
        null
      ]
    },
    "modular": {
      "description": "The modularity of the PSU cables (e.g., Full, Semi-Modular, Non-Modular)",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "Full",
        "Semi-Modular",
        "Non-Modular",
        null
      ]
    },
    "color": {
      "description": "The color(s) of this product. Each color of the product should be included in the array. Includes the casing color",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string",
        "enum": [
          "BLACK",
          "WHITE",
          "RGB",
          "RED",
          "BLUE",
          "GREEN",
          "GREY",
          "YELLOW",
          "ORANGE",
          "PURPLE",
          "PINK",
          "BROWN",
          "GOLD"
        ]
      }
    },
    "length": {
      "description": "The length of the PSU in mm (e.g., 140)",
      "type": [
        "number",
        "null"
      ]
    },
    "fanless": {
      "description": "Whether the PSU operates without a fan",
      "type": [
        "boolean",
        "null"
      ]
    },
    "connectors": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "atx_24_pin": {
          "description": "The number of ATX 24-pin (20+4) connectors (main motherboard power)",
          "type": [
            "number",
            "null"
          ]
        },
        "eps_8_pin": {
          "description": "The number of EPS12V 8-pin (4+4) connectors (CPU power)",
          "type": [
            "number",
            "null"
          ]
        },
        "pcie_12vhpwr": {
          "description": "The number of PCIe 5.0 12VHPWR (12+4) pin connectors (for high-end GPUs). Also referred to as 16-pin (12+4).",
          "type": [
            "number",
            "null"
          ]
        },
        "pcie_6_plus_2_pin": {
          "description": "The number of PCIe 6+2-pin connectors (commonly used for GPUs)",
          "type": [
            "number",
            "null"
          ]
        },
        "sata": {
          "description": "The number of SATA power connectors",
          "type": [
            "number",
            "null"
          ]
        },
        "molex_4_pin": {
          "description": "The number of Molex 4-pin peripheral connectors (for older devices)",
          "type": [
            "number",
            "null"
          ]
        },
        "floppy_4_pin": {
          "description": "The number of Floppy 4-pin connectors. Increasingly rare.",
          "type": [
            "number",
            "null"
          ]
        }
      }
    },
    "general_product_information": {
      "type": [
        "object",
        "null"
      ],
      "description": "General product information and retailer SKUs",
      "properties": {
        "amazon_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Amazon product SKU"
        },
        "newegg_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Newegg product SKU"
        },
        "bestbuy_sku": {
          "type": [
            "number",
            "null"
          ],
          "description": "Best Buy product SKU"
        },
        "walmart_sku": {
          "type": [
            "number",
            "null"
          ],
          "description": "Walmart product SKU"
        },
        "adorama_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Adorama product SKU"
        },
        "ibuypower_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "iBuyPower product SKU"
        },
        "hyte_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "HYTE product SKU"
        },
        "manufacturer_url": {
          "type": [
            "string",
            "null"
          ],
          "description": "Official manufacturer product URL"
        }
      }
    },
    "metadata": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "name": {
          "description": "Full product name",
          "type": [
            "string",
            "null"
          ]
        },
        "manufacturer": {
          "description": "Power Supply manufacturer",
          "type": [
            "string",
            "null"
          ]
        },
        "part_numbers": {
          "description": "Array of manufacturer's part numbers/SKUs",
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "series": {
          "description": "Product series name",
          "type": [
            "string",
            "null"
          ]
        },
        "variant": {
          "description": "Specific variant in the series",
          "type": [
            "string",
            "null"
          ]
        },
        "releaseYear": {
          "description": "Year of release",
          "type": [
            "number",
            "null"
          ]
        },
        "manufacturer_color": {
          "description": "Manufacturer's official color name for this product variant.",
          "type": [
            "string",
            "null"
          ]
        },
        "last_manually_spec_verified_at": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time",
          "description": "ISO 8601 timestamp of when the part specs were last manually verified by a human"
        }
      },
      "required": [
        "name"
      ]
    }
  }
}
