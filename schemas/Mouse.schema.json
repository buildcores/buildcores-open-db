{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": [
    "object",
    "null"
  ],
  "title": "Mouse Schema",
  "description": "Schema for Mouse components",
  "required": [
    "metadata"
  ],
  "properties": {
    "opendb_id": {
      "type": [
        "string",
        "null"
      ],
      "description": "Unique identifier for the document (UUID v4)"
    },
    "weight": {
      "description": "Weight of the mouse in grams",
      "type": [
        "number",
        "null"
      ]
    },
    "dimensions": {
      "description": "Mouse dimensions",
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "length": {
          "description": "Length in millimeters",
          "type": [
            "number",
            "null"
          ]
        },
        "width": {
          "description": "Width in millimeters",
          "type": [
            "number",
            "null"
          ]
        },
        "height": {
          "description": "Height in millimeters",
          "type": [
            "number",
            "null"
          ]
        }
      }
    },
    "size": {
      "description": "Physical size category (Small, Medium, Large)",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "Small",
        "Medium",
        "Large",
        null
      ]
    },
    "shape": {
      "description": "Mouse shape type (Ergonomic or Ambidextrous)",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "Ergonomic",
        "Ambidextrous",
        null
      ]
    },
    "connectivity": {
      "description": "Connection types supported by this mouse (can have multiple, e.g., Wired + Wireless)",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string",
        "enum": [
          "Wired",
          "Wired USB-A",
          "Wired USB-C",
          "Wireless 2.4GHz",
          "Bluetooth"
        ]
      }
    },
    "sensor": {
      "description": "Sensor model (e.g., 'PixArt PAW3395', 'Razer Focus Pro 30K')",
      "type": [
        "string",
        "null"
      ]
    },
    "max_dpi": {
      "description": "Maximum DPI/CPI setting",
      "type": [
        "number",
        "null"
      ]
    },
    "polling_rate": {
      "description": "Polling rate in Hz (e.g., 1000, 2000, 4000, 8000)",
      "type": [
        "number",
        "null"
      ]
    },
    "buttons": {
      "description": "Number of programmable buttons",
      "type": [
        "number",
        "null"
      ]
    },
    "switches": {
      "description": "Switch type (e.g., 'Optical', 'Mechanical', 'Kailh GM 8.0')",
      "type": [
        "string",
        "null"
      ]
    },
    "onboard_memory": {
      "description": "Whether the mouse has onboard memory for storing profiles",
      "type": [
        "boolean",
        "null"
      ]
    },
    "rgb": {
      "description": "Whether the mouse has RGB lighting",
      "type": [
        "boolean",
        "null"
      ]
    },
    "battery_life": {
      "description": "Battery life in hours (for wireless mice)",
      "type": [
        "number",
        "null"
      ]
    },
    "battery_type": {
      "description": "Type of battery (Rechargeable, AA, AAA)",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "Rechargeable",
        "AA",
        "AAA",
        null
      ]
    },
    "grip_types": {
      "description": "Supported grip styles (Palm, Claw, Fingertip)",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string",
        "enum": [
          "Palm",
          "Claw",
          "Fingertip"
        ]
      }
    },
    "silent_clicks": {
      "description": "Whether the mouse has silent/quiet clicks (useful for office environments)",
      "type": [
        "boolean",
        "null"
      ]
    },
    "general_product_information": {
      "type": [
        "object",
        "null"
      ],
      "description": "General product information and retailer SKUs",
      "properties": {
        "amazon_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Amazon product SKU"
        },
        "newegg_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Newegg product SKU"
        },
        "bestbuy_sku": {
          "type": [
            "number",
            "null"
          ],
          "description": "Best Buy product SKU"
        },
        "walmart_sku": {
          "type": [
            "number",
            "null"
          ],
          "description": "Walmart product SKU"
        },
        "adorama_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Adorama product SKU"
        },
        "ibuypower_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "iBuyPower product SKU"
        },
        "hyte_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "HYTE product SKU"
        },
        "manufacturer_url": {
          "type": [
            "string",
            "null"
          ],
          "description": "Official manufacturer product URL"
        }
      }
    },
    "metadata": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "name": {
          "description": "Full product name",
          "type": [
            "string",
            "null"
          ]
        },
        "manufacturer": {
          "description": "Mouse manufacturer",
          "type": [
            "string",
            "null"
          ]
        },
        "part_numbers": {
          "description": "Array of manufacturer's part numbers/SKUs",
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "series": {
          "description": "Product series name",
          "type": [
            "string",
            "null"
          ]
        },
        "variant": {
          "description": "Specific variant in the series",
          "type": [
            "string",
            "null"
          ]
        },
        "releaseYear": {
          "description": "Year of release",
          "type": [
            "number",
            "null"
          ]
        },
        "last_manually_spec_verified_at": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time",
          "description": "ISO 8601 timestamp of when the part specs were last manually verified by a human"
        }
      },
      "required": [
        "name"
      ]
    }
  }
}
