{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": [
    "object",
    "null"
  ],
  "title": "Motherboard Schema",
  "description": "Schema for Motherboard components",
  "required": [
    "metadata"
  ],
  "properties": {
    "opendb_id": {
      "type": [
        "string",
        "null"
      ],
      "description": "Unique identifier for the document (UUID v4)"
    },
    "socket": {
      "description": "The CPU socket type supported by the motherboard. E.g. AM4, AM5, LGA 1700, LGA 2066, TR5, etc.",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "AM5",
        "AM4",
        "AM3+",
        "AM3",
        "AM2+",
        "AM2",
        "AM1",
        "FM2+",
        "FM2",
        "FM1",
        "sTR5",
        "sTRX4",
        "sTR4",
        "TR4",
        "LGA 1851",
        "LGA 1700",
        "LGA 1200",
        "LGA 1151",
        "LGA 1151v2",
        "LGA 1150",
        "LGA 1155",
        "LGA 1156",
        "LGA 2066",
        "LGA 2011-3",
        "LGA 2011-3 Narrow",
        "LGA 2011",
        "LGA 1366",
        "LGA 1356",
        "LGA 775",
        "LGA 4677",
        "LGA 4189",
        "LGA 3647",
        "LGA 1121",
        "G34",
        "SP5",
        "SP3",
        "2 x LGA 2011",
        "2 x LGA 2011-3",
        "2 x LGA 2011-3 Narrow",
        "2 x LGA 1366",
        "2 x G34",
        "Integrated Atom",
        "Integrated Xeon D",
        "Integrated Pentium",
        "Integrated AMD",
        null
      ]
    },
    "form_factor": {
      "description": "The physical size and layout of the motherboard (e.g., ATX, Micro ATX, Mini-ITX)",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "ATX",
        "Micro ATX",
        "Mini-ITX",
        "EATX",
        "Mini DTX",
        "DTX",
        "SSI EEB",
        "SSI CEB",
        "XL ATX",
        "HPTX",
        "Thin Mini-ITX",
        "Flex ATX",
        null
      ]
    },
    "chipset": {
      "description": "The chipset used by the motherboard (e.g., Intel Z790, AMD X670E)",
      "type": [
        "string",
        "null"
      ]
    },
    "memory": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "max": {
          "description": "The maximum amount of RAM the motherboard can support in GB",
          "type": [
            "number",
            "null"
          ]
        },
        "ram_type": {
          "description": "The type of RAM supported (e.g., DDR5, DDR4)",
          "type": [
            "string",
            "null"
          ],
          "enum": [
            "DDR5",
            "DDR4",
            "DDR3",
            "DDR2",
            "DDR1",
            null
          ]
        },
        "slots": {
          "description": "The number of RAM slots on the motherboard",
          "type": [
            "number",
            "null"
          ]
        }
      }
    },
    "color": {
      "description": "The color(s) of this product. Each color of the product should be included in the array. Includes PCB and heatsink colors",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string",
        "enum": [
          "BLACK",
          "WHITE",
          "RGB",
          "RED",
          "BLUE",
          "GREEN",
          "GREY",
          "YELLOW",
          "ORANGE",
          "PURPLE",
          "PINK",
          "BROWN",
          "GOLD"
        ]
      }
    },
    "pcie_slots": {
      "description": "PCIe slots on the motherboard. E.g. a motherboard with 4 PCIe x16 slots, 2 PCIe x8 slots, and 1 PCIe x4 slot would be represented as an array with 3 objects. Be careful on this section and use all available info to make your decision including obvious pcie slots on the motherboard images if provided.",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "object",
        "properties": {
          "gen": {
            "description": "PCIe generation (e.g., 5.0, 4.0)",
            "type": [
              "string",
              "null"
            ],
            "enum": [
              "5.0",
              "4.0",
              "3.0",
              "2.0",
              "1.1",
              null
            ]
          },
          "quantity": {
            "description": "Number of slots of this type and generation",
            "type": [
              "number",
              "null"
            ]
          },
          "lanes": {
            "description": "Number of lanes per slot. E.g. 16 lanes for x16 slot, 8 lanes for x8 slot, etc.",
            "type": [
              "number",
              "null"
            ]
          }
        }
      }
    },
    "m2_slots": {
      "description": "M.2 slots on the motherboard. For every slot that is supported, add an object to the array. E.g. for a motherboard with 4 M.2 slots, add 4 objects to the array.",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "object",
        "properties": {
          "size": {
            "description": "M.2 form factor size (e.g., 2280, 22110)",
            "type": [
              "string",
              "null"
            ]
          },
          "key": {
            "description": "M.2 key type (e.g., M, E)",
            "type": [
              "string",
              "null"
            ],
            "enum": [
              "M",
              "E",
              "B",
              "B+M",
              null
            ]
          },
          "interface": {
            "description": "M.2 interface specification (e.g., PCIe 4.0 x4)",
            "type": [
              "string",
              "null"
            ]
          }
        }
      }
    },
    "storage_devices": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "sata_6_gb_s": {
          "description": "Number of SATA 6 Gb/s ports",
          "type": [
            "number",
            "null"
          ]
        },
        "sata_3_gb_s": {
          "description": "Number of SATA 3 Gb/s ports",
          "type": [
            "number",
            "null"
          ]
        },
        "u2": {
          "description": "Number of U.2 ports",
          "type": [
            "number",
            "null"
          ]
        }
      }
    },
    "onboard_ethernet": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "object",
        "properties": {
          "speed": {
            "description": "Network speed (e.g., 2.5 Gb/s, 1 Gb/s)",
            "type": [
              "string",
              "null"
            ],
            "enum": [
              "10 Gb/s",
              "5 Gb/s",
              "2.5 Gb/s",
              "1 Gb/s",
              "100 Mb/s",
              null
            ]
          },
          "controller": {
            "description": "Network controller model",
            "type": [
              "string",
              "null"
            ]
          }
        }
      }
    },
    "wireless_networking": {
      "description": "Supported wifi standards. E.g. Wifi 6E, Wifi 7, etc",
      "type": [
        "string",
        "null"
      ]
    },
    "usb_headers": {
      "description": "Internal USB headers. Please only include front panel headers. Do not include headers on the back of the motherboard.",
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "usb_2_0": {
          "description": "Number of USB 2.0 headers",
          "type": [
            "number",
            "null"
          ]
        },
        "usb_3_2_gen_1": {
          "description": "Number of USB 3.2 Gen 1 headers. This is also known as USB 5Gbps.",
          "type": [
            "number",
            "null"
          ]
        },
        "usb_3_2_gen_2": {
          "description": "Number of USB 3.2 Gen 2 headers. This is also known as USB 10Gbps.",
          "type": [
            "number",
            "null"
          ]
        },
        "usb_3_2_gen_2x2": {
          "description": "Number of USB 3.2 Gen 2x2 headers. This is also known as USB 20Gbps.",
          "type": [
            "number",
            "null"
          ]
        },
        "usb_4": {
          "description": "Number of USB 4 headers. This is also known as USB 40Gbps.",
          "type": [
            "number",
            "null"
          ]
        },
        "usb_4_80g": {
          "description": "Number of USB 4 headers. This is also known as USB 80Gbps.",
          "type": [
            "number",
            "null"
          ]
        }
      }
    },
    "fan_headers": {
      "description": "Fan and cooling headers on the motherboard",
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "cpu_fan": {
          "description": "Number of CPU fan headers (typically 4-pin PWM)",
          "type": [
            "number",
            "null"
          ]
        },
        "case_fan": {
          "description": "Number of case/chassis fan headers (typically 4-pin PWM)",
          "type": [
            "number",
            "null"
          ]
        },
        "pump": {
          "description": "Number of dedicated pump headers for AIO coolers",
          "type": [
            "number",
            "null"
          ]
        },
        "cpu_opt": {
          "description": "Number of CPU optional fan headers",
          "type": [
            "number",
            "null"
          ]
        }
      }
    },
    "rgb_headers": {
      "description": "RGB and lighting headers on the motherboard",
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "argb_5v": {
          "description": "Number of addressable RGB headers (5V, 3-pin)",
          "type": [
            "number",
            "null"
          ]
        },
        "rgb_12v": {
          "description": "Number of standard RGB headers (12V, 4-pin)",
          "type": [
            "number",
            "null"
          ]
        }
      }
    },
    "front_panel_headers": {
      "description": "Front panel connector headers",
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "power_button": {
          "description": "Whether the motherboard has a power button header",
          "type": [
            "boolean",
            "null"
          ]
        },
        "reset_button": {
          "description": "Whether the motherboard has a reset button header",
          "type": [
            "boolean",
            "null"
          ]
        },
        "power_led": {
          "description": "Whether the motherboard has a power LED header",
          "type": [
            "boolean",
            "null"
          ]
        },
        "hdd_led": {
          "description": "Whether the motherboard has an HDD activity LED header",
          "type": [
            "boolean",
            "null"
          ]
        }
      }
    },
    "other_headers": {
      "description": "Other miscellaneous headers",
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "temperature_sensor": {
          "description": "Number of temperature sensor headers",
          "type": [
            "number",
            "null"
          ]
        },
        "thunderbolt": {
          "description": "Number of Thunderbolt headers",
          "type": [
            "number",
            "null"
          ]
        },
        "com_port": {
          "description": "Number of COM port headers",
          "type": [
            "number",
            "null"
          ]
        }
      }
    },
    "power_connectors": {
      "description": "Power connector specifications",
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "main_power": {
          "description": "Main power connector specification (e.g., '24-pin')",
          "type": [
            "string",
            "null"
          ]
        },
        "cpu_power": {
          "description": "CPU power connector specifications (e.g., ['8-pin', '8-pin'] for dual 8-pin)",
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        }
      }
    },
    "ecc_support": {
      "description": "Whether the motherboard supports ECC memory",
      "type": [
        "boolean",
        "null"
      ]
    },
    "raid_support": {
      "description": "Whether the motherboard supports RAID configurations",
      "type": [
        "boolean",
        "null"
      ]
    },
    "back_connect_connectors": {
      "description": "Whether the motherboard uses back-connect connectors",
      "type": [
        "boolean",
        "null"
      ]
    },
    "bios_features": {
      "description": "BIOS features",
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "flashback": {
          "description": "Whether the board has BIOS flashback capability",
          "type": [
            "boolean",
            "null"
          ]
        },
        "clear_cmos": {
          "description": "Whether the board has a clear CMOS button",
          "type": [
            "boolean",
            "null"
          ]
        }
      }
    },
    "audio": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "chipset": {
          "description": "Details on the audio chipset used",
          "type": [
            "string",
            "null"
          ]
        },
        "channels": {
          "description": "Number of audio channels supported",
          "type": [
            "string",
            "null"
          ],
          "enum": [
            "7.1",
            "5.1",
            "2.1",
            "2.0",
            null
          ]
        }
      }
    },
    "back_panel_ports": {
      "description": "This is a list of ports on the back of the motherboard.",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string"
      }
    },
    "general_product_information": {
      "type": [
        "object",
        "null"
      ],
      "description": "General product information and retailer SKUs",
      "properties": {
        "amazon_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Amazon product SKU"
        },
        "newegg_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Newegg product SKU"
        },
        "bestbuy_sku": {
          "type": [
            "number",
            "null"
          ],
          "description": "Best Buy product SKU"
        },
        "walmart_sku": {
          "type": [
            "number",
            "null"
          ],
          "description": "Walmart product SKU"
        },
        "adorama_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Adorama product SKU"
        },
        "ibuypower_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "iBuyPower product SKU"
        },
        "hyte_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "HYTE product SKU"
        },
        "manufacturer_url": {
          "type": [
            "string",
            "null"
          ],
          "description": "Official manufacturer product URL"
        }
      }
    },
    "metadata": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "name": {
          "description": "Full product name",
          "type": [
            "string",
            "null"
          ]
        },
        "manufacturer": {
          "description": "Motherboard manufacturer",
          "type": [
            "string",
            "null"
          ]
        },
        "part_numbers": {
          "description": "Array of manufacturer's part numbers/SKUs",
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "series": {
          "description": "Product series name",
          "type": [
            "string",
            "null"
          ]
        },
        "variant": {
          "description": "Specific variant in the series",
          "type": [
            "string",
            "null"
          ]
        },
        "releaseYear": {
          "description": "Year of release",
          "type": [
            "number",
            "null"
          ]
        },
        "last_manually_spec_verified_at": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time",
          "description": "ISO 8601 timestamp of when the part specs were last manually verified by a human"
        }
      },
      "required": [
        "name"
      ]
    }
  }
}
