{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": [
    "object",
    "null"
  ],
  "title": "Case Schema",
  "description": "Schema for Case components",
  "required": [
    "metadata"
  ],
  "properties": {
    "opendb_id": {
      "type": [
        "string",
        "null"
      ],
      "description": "Unique identifier for the document (UUID v4)"
    },
    "form_factor": {
      "description": "The form factor of the case (e.g., ATX Mid Tower, Full Tower, Mini-ITX)",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "ATX Full Tower",
        "ATX Mid Tower",
        "ATX Mini Tower",
        "ATX Desktop",
        "ATX Test Bench",
        "EATX Full Tower",
        "EATX Mid Tower",
        "Micro ATX Mid Tower",
        "Micro ATX Mini Tower",
        "Micro ATX Desktop",
        "Micro ATX Slim Tower",
        "Mini ITX Tower",
        "Mini ITX Desktop",
        "Mini ITX Test Bench",
        "HTPC",
        "Open Frame",
        null
      ]
    },
    "supported_motherboard_form_factors": {
      "description": "Array of motherboard form factors this case can accommodate (e.g., ['ATX', 'Micro ATX', 'Mini-ITX'])",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string",
        "enum": [
          "ATX",
          "Micro ATX",
          "Mini-ITX",
          "EATX",
          "Mini DTX",
          "DTX",
          "SSI EEB",
          "SSI CEB",
          "XL ATX",
          "HPTX",
          "Thin Mini-ITX",
          "Flex ATX"
        ]
      }
    },
    "color": {
      "description": "The color(s) of this product. Each color of the product should be included in the array. Includes exterior and interior colors",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string",
        "enum": [
          "BLACK",
          "WHITE",
          "RGB",
          "RED",
          "BLUE",
          "GREEN",
          "GREY",
          "YELLOW",
          "ORANGE",
          "PURPLE",
          "PINK",
          "BROWN",
          "GOLD"
        ]
      }
    },
    "power_supply": {
      "description": "If included with the case, could detail the PSU model.",
      "type": [
        "string",
        "null"
      ]
    },
    "power_supply_included": {
      "description": "Whether the case includes a power supply.",
      "type": [
        "boolean",
        "null"
      ]
    },
    "supported_power_supply_form_factors": {
      "description": "The PSU form factors that the case can support.",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string"
      }
    },
    "side_panel": {
      "description": "The type of side panel (e.g., Tempered Glass, Acrylic, Solid)",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "Tempered Glass",
        "Acrylic",
        "Mesh",
        "Solid",
        "None",
        "Tinted Tempered Glass",
        "Tinted Acrylic",
        "Aluminum",
        "Steel",
        null
      ]
    },
    "has_transparent_side_panel": {
      "description": "Whether the case has a transparent side panel",
      "type": [
        "boolean",
        "null"
      ]
    },
    "front_panel_usb": {
      "description": "Legacy front panel USB descriptor (deprecated).",
      "type": [
        "string",
        "null"
      ]
    },
    "front_usb_ports": {
      "description": "Array of front panel USB port types",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string"
      }
    },
    "max_video_card_length": {
      "description": "The maximum supported video card length in mm",
      "type": [
        "number",
        "null"
      ]
    },
    "max_cpu_cooler_height": {
      "description": "The maximum supported CPU cooler height in mm",
      "type": [
        "number",
        "null"
      ]
    },
    "internal_3_5_bays": {
      "description": "The number of internal 3.5\" drive bays",
      "type": [
        "number",
        "null"
      ]
    },
    "internal_2_5_bays": {
      "description": "The number of internal 2.5\" drive bays",
      "type": [
        "number",
        "null"
      ]
    },
    "external_3_5_bays": {
      "description": "The number of external 3.5\" drive bays",
      "type": [
        "number",
        "null"
      ]
    },
    "external_5_25_bays": {
      "description": "The number of external 5.25\" drive bays",
      "type": [
        "number",
        "null"
      ]
    },
    "power_supply_shroud": {
      "description": "Whether the case has a power supply shroud",
      "type": [
        "boolean",
        "null"
      ]
    },
    "expansion_slots": {
      "description": "The number of expansion slots",
      "type": [
        "number",
        "null"
      ]
    },
    "riser_expansion_slots": {
      "description": "The number of riser expansion slots",
      "type": [
        "number",
        "null"
      ]
    },
    "supports_rear_connecting_motherboard": {
      "description": "Whether the case supports rear connecting motherboard (BTF, Project Zero, etc)",
      "type": [
        "boolean",
        "null"
      ]
    },
    "dimensions": {
      "description": "The dimensions of the case in mm (e.g., '466 x 290 x 495')",
      "type": [
        "string",
        "null"
      ]
    },
    "dimensions_mm": {
      "description": "Structured dimensions in mm",
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "depth": {
          "description": "Part length (depth) in mm",
          "type": [
            "number",
            "null"
          ]
        },
        "width": {
          "description": "Part width in mm",
          "type": [
            "number",
            "null"
          ]
        },
        "height": {
          "description": "Part height in mm",
          "type": [
            "number",
            "null"
          ]
        }
      }
    },
    "volume": {
      "description": "The internal volume of the case in liters",
      "type": [
        "number",
        "null"
      ]
    },
    "weight": {
      "description": "Weight in pounds",
      "type": [
        "number",
        "null"
      ]
    },
    "general_product_information": {
      "type": [
        "object",
        "null"
      ],
      "description": "General product information and retailer SKUs",
      "properties": {
        "amazon_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Amazon product SKU"
        },
        "newegg_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Newegg product SKU"
        },
        "bestbuy_sku": {
          "type": [
            "number",
            "null"
          ],
          "description": "Best Buy product SKU"
        },
        "walmart_sku": {
          "type": [
            "number",
            "null"
          ],
          "description": "Walmart product SKU"
        },
        "adorama_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "Adorama product SKU"
        },
        "ibuypower_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "iBuyPower product SKU"
        },
        "hyte_sku": {
          "type": [
            "string",
            "null"
          ],
          "description": "HYTE product SKU"
        },
        "manufacturer_url": {
          "type": [
            "string",
            "null"
          ],
          "description": "Official manufacturer product URL"
        }
      }
    },
    "metadata": {
      "type": [
        "object",
        "null"
      ],
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string",
          "description": "Full product name"
        },
        "manufacturer": {
          "type": [
            "string",
            "null"
          ],
          "description": "Product manufacturer"
        },
        "part_numbers": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          },
          "description": "Array of manufacturer's part numbers/SKUs"
        },
        "series": {
          "type": [
            "string",
            "null"
          ],
          "description": "Product series name"
        },
        "variant": {
          "type": [
            "string",
            "null"
          ],
          "description": "Specific variant in the series"
        },
        "releaseYear": {
          "type": [
            "number",
            "null"
          ],
          "description": "Year of release"
        },
        "last_manually_spec_verified_at": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time",
          "description": "ISO 8601 timestamp of when the part specs were last manually verified by a human"
        }
      }
    }
  }
}
